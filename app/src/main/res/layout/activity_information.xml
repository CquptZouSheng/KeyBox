<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zousheng.keybox.InformationActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/biaotilan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1692ff"
        android:minHeight="120dp"
        android:paddingBottom="20dp">
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/Name"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="60dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/arrow_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:adjustViewBounds="true"
        android:maxWidth="16dp"
        android:maxHeight="16dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="20dp" />
    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete"
        android:adjustViewBounds="true"
        android:maxWidth="16dp"
        android:maxHeight="16dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />
    <android.support.v7.widget.CardView
        android:id="@+id/rewrite"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="28dp"
        app:cardBackgroundColor="#ff006f"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/biaotilan"
        android:layout_marginTop="-30dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:adjustViewBounds="true"
                android:maxWidth="16dp"
                android:maxHeight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pencil"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account"
        android:adjustViewBounds="true"
        android:maxHeight="24dp"
        android:maxWidth="24dp"
        android:layout_alignTop="@+id/zhanghao"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/zhanghao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        android:textSize="14sp"
        android:layout_marginLeft="75dp"
        android:layout_below="@+id/biaotilan"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/Account"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:layout_marginLeft="75dp"
        android:layout_below="@+id/zhanghao"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/Line1"
        android:layout_width="280dp"
        android:layout_height="0.1dp"
        android:background="#8b8b8b"
        android:layout_below="@+id/Account"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/password"
        android:adjustViewBounds="true"
        android:maxHeight="24dp"
        android:maxWidth="24dp"
        android:layout_toLeftOf="@+id/mima"
        android:layout_alignTop="@+id/mima"
        android:layout_marginRight="30dp"/>
    <TextView
        android:id="@+id/mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textSize="14sp"
        android:layout_below="@+id/Line1"
        android:layout_alignLeft="@id/zhanghao"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/Password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:layout_below="@+id/mima"
        android:layout_alignLeft="@+id/mima"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/Line2"
        android:layout_width="280dp"
        android:layout_height="0.1dp"
        android:background="#8b8b8b"
        android:layout_below="@+id/Password"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/data"
        android:adjustViewBounds="true"
        android:maxHeight="24dp"
        android:maxWidth="24dp"
        android:layout_toLeftOf="@+id/riqi"
        android:layout_alignTop="@+id/riqi"
        android:layout_marginRight="30dp"/>
    <TextView
        android:id="@+id/riqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建日期"
        android:textSize="14sp"
        android:layout_below="@+id/Line2"
        android:layout_alignLeft="@+id/mima"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_alignLeft="@+id/riqi"
        android:layout_below="@id/riqi"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/Line3"
        android:layout_width="280dp"
        android:layout_height="0.1dp"
        android:background="#8b8b8b"
        android:layout_below="@id/Data"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/remark"
        android:adjustViewBounds="true"
        android:maxHeight="24dp"
        android:maxWidth="24dp"
        android:layout_toLeftOf="@+id/beizhu"
        android:layout_alignTop="@+id/beizhu"
        android:layout_marginRight="30dp"/>
    <TextView
        android:id="@+id/beizhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注"
        android:textSize="14sp"
        android:layout_below="@+id/Line3"
        android:layout_alignLeft="@+id/mima"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/Remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@+id/beizhu"
        android:layout_alignLeft="@+id/mima"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="280dp"
        android:layout_height="0.1dp"
        android:background="#8b8b8b"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Remark"
        android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
